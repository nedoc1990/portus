<% if @webhook.errors.any? %>
  $('#float-alert p').html("<%= escape_javascript(raw(@webhook.errors.full_messages.join('<br/>'))) %>");
  $('#float-alert').fadeIn(setTimeOutAlertDelay());
<% else %>
  $('.edit-webhook-form').toggle();
  $('.webhook_information').toggle();

  var el = $(".edit-webhook-link i.fa");
  el.removeClass('fa-close');
  el.addClass('fa-pencil');

  $('.webhook_information .panel-body').html("<%= escape_javascript(render partial: "detail", locals: {webhook: @webhook}) %>");
  $('#float-alert p').html("Webhook '<%= @webhook.host %>' has been updated successfully");
  $('#float-alert').fadeIn(setTimeOutAlertDelay());
  $('.webhook_information .panel-heading h5 strong').text("<%= @webhook.host %> ")
<% end %>
